shell-integration = "detect"

font-family = "JetBrainsMono Nerd Font"
font-size = 13.0

window-height = 160
window-width = 160

theme = "TokyoNight Storm"

background-image = "night-sky.jpeg"
background-image-opacity = 0.10
background-image-fit = "cover"

clipboard-trim-trailing-spaces = "true"

unfocused-split-opacity = 0.9

# Window Navigation

# New Splits
keybind = alt+d=new_split:right
keybind = alt+shift+d=new_split:down

# Split Navigation
keybind = ctrl+shift+h=goto_split:left
keybind = ctrl+shift+l=goto_split:right
keybind = ctrl+shift+j=goto_split:down
keybind = ctrl+shift+k=goto_split:up

# Quick Terminal
keybind = global:cmd+shift+t=toggle_quick_terminal
quick-terminal-screen = "mouse"
quick-terminal-position = "bottom"

# MacOS specifics
macos-titlebar-style = "tabs"
macos-icon = "retro"
macos-icon-frame = "chrome"

# Fix Escape Sequences
keybind = shift+enter=text:\r
keybind = ctrl+enter=text:\r
